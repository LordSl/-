/* pages/recomm/recomm.wxss *//* pages/category/category.wxss */
page {
  background:rgb(247, 250, 242);
}

.header {
  padding: 20rpx 30rpx;
  margin-right: 50rpx;
  margin:0px 0px -0px 0px;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.header text {
  color: rgb(79, 75, 75);
  font-size: 45rpx;
  font-weight:bold;
  display:flex;
  justify-content: center;
  
}
.common-list{
  color: rgb(0, 0, 0);
}
.title{
  font-weight:bold;
}
.index-list-item{
  background-color:rgb(225, 225, 225);
}

.ssss{
  font-size:13.3px;
  color:rgb(0, 0, 0);
}

.cover-img{
  height:100px;
  width:60px;
  opacity: 1;
}

.divLine{

  background: rgb(80, 80, 78);
 
  width: 100%;
 
  height: 2rpx;
 
 }


.select_box{
  background: #fff;
  width: 27%;
  margin:5px 10px -100px ;
  position: relative;
  z-index:1000;
  opacity: 0.8;
  float:right
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #3594b6;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
  font-size: 30rpx;
  flex: 1;
 }
 .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
 }