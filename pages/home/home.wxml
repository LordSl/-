<!--pages/home/home.wxml-->

<view class="search-container">
  <input type="text" bindinput="输入书名" placeholder="输入书名搜索"></input>
  <icon bindtap="按书名搜索" type="search" size="20" />
</view>

<!-- catchtap="onSwiperTap" -->
<!-- 因为不校验域名所以好像没法用外链图片的样子... -->
<swiper vertical="{{false}}" indicator-dots="true" autoplay="true" interval="5000">
  <swiper-item>
    <image src="/images/p1.png" data-postId="1"></image>
  </swiper-item>    
  <swiper-item>
    <image src="/images/p2.png" data-postId="2"></image>
  </swiper-item>
  <swiper-item>
    <image src="/images/p3.png" data-postId="3"></image>
  </swiper-item>
</swiper>    

<scroll-view class="mysv" scroll-y="true" style="height:{{scrollHeight}}px" bindscrolltolower="scrollLowerEvent"> 
 
<block wx:for="{{classifications}}" wx:key="index"> 
  <view class="common-list"> 
    <view class="list-item" bindtap="进入具体类别" id="{{index}}"> 
      <view class="index-list-item"> 
        <view class="cover"> 
          <image class="cover-img" src="{{item.url}}"></image> 
        </view>  
        <view class="content"> 
          <view class="title">{{item.name}}</view> 
          <view class="desc">{{item.motto}}</view> 
          <view class="desc">{{item.auther}}</view> 
        </view> 
      </view>
      <!-- 重复部分 -->
      <view class="index-list-item"> 
        <view class="cover"> 
          <image class="cover-img" src="{{item.url}}"></image> 
        </view>  
        <view class="content"> 
          <view class="title">{{item.name}}</view> 
          <view class="desc">{{item.motto}}</view> 
          <view class="desc">{{item.auther}}</view> 
        </view> 
      </view> 
      <view class="index-list-item"> 
        <view class="cover"> 
          <image class="cover-img" src="{{item.url}}"></image> 
        </view>  
        <view class="content"> 
          <view class="title">{{item.name}}</view> 
          <view class="desc">{{item.motto}}</view> 
          <view class="desc">{{item.auther}}</view> 
        </view> 
      </view>
      <!-- 重复部分 -->  
    </view> 
  </view> 
</block>  
</scroll-view> 
<text class="sumary">当前图书总数：{{currentBookNum}}</text>